<script>
    let scores = [];
    let count = 3;

    function nextStep(current, next) {
        document.getElementById('step' + current).classList.remove('active');
        document.getElementById('step' + next).classList.add('active');
    }

    function checkStep1() {
        const val = document.getElementById('nameInput').value;
        if (val.includes("ç†Šå‰›")) {
            nextStep(1, 2);
        } else {
            alert("é©—è­‰å¤±æ•—ï¼Œè«‹è¼¸å…¥æ­£ç¢ºèº«åˆ†ï¼");
        }
    }

    function checkStep2() {
        if (document.getElementById('satisfaction').value !== "") {
            nextStep(2, 3);
        } else {
            alert("è«‹é¸æ“‡æ»¿æ„åº¦ï¼");
        }
    }

    function checkStep3() {
        nextStep(3, 4);
    }

    function draw() {
        if (count > 0) {
            // è¨­å®šé‡‘é¡å€é–“ (å¯è‡ªè¡Œèª¿æ•´ï¼Œä¾‹å¦‚ 3600 åˆ° 8800)
            const min = 6600;
            const max = 36800;
            const amount = Math.floor(Math.random() * (max - min + 1) + min);
            
            scores.push(amount);
            count--;
            
            document.getElementById('currentPrize').innerText = "$" + amount;
            document.getElementById('remainCount').innerText = count;
            document.getElementById('historyList').innerText = "æŠ½çç´€éŒ„ï¼š" + scores.join(", ");

            if (count === 0) {
                document.getElementById('drawBtn').innerText = "æŸ¥çœ‹æœ€çµ‚çµæœ";
                document.getElementById('drawBtn').onclick = showFinal;
            }
        }
    }

    function showFinal() {
        const maxPrize = Math.max(...scores);
        document.getElementById('finalPrize').innerText = "$" + maxPrize;
        nextStep(4, 5);
    }
</script>

